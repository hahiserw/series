#!/bin/bash

formats=
player=
source "$HOME/.seriesrc"
# id:series_dir:next_to_watch
data_file="$HOME/.series-ng"

touch "$data_file"


help() {
	cat << EOH
	$0 series_dir [add|set|del|ls]
EOH
	exit 1
}

_add() {
	series_dir=$1
	next=$2

	if ! grep -qs "^$series_dir:" "$data_file"; then
		echo "$series_dir:$next" >> "$data_file"
	fi
}

_del() {
	series_dir=$1

	if grep -qs "^$series_dir:" "$data_file"; then
		new_data=$(grep -v "^$series_dir:" "$data_file")
		echo "$new_data" > "$data_file"
	fi
}

_watch() {
	series_dir=$1

	data=$(grep "^$series_dir:" "$data_file")

	list=$(find "$series_dir" "${formats[@]}" | sort)

	if [[ -z $data ]]; then
		# first from the list
		next=$(head -1 <<< "$list")
	else
		# next from the record
		next=$(cut -d: -f2 <<< "$data")
	fi

	if "${player[@]}" "$next"; then
		another=$(grep -A1 "$next" <<< "$list" | tail -1)

		_del "$series_dir"

		# if last ep skip this
		if [[ $next != $(tail -1 <<< "$list") ]]; then
			_add "$series_dir" "$another"
		else
			echo "Last episode reached; deleting series entry"
		fi
	else
		echo "Not updating series record"
	fi
}

_set() {
	series_dir=$1
	arg=$2

	data=$(grep "^$series_dir:" "$data_file")
	if [[ -z $data ]]; then
		echo "Series with given series_dir doesn't exist"
		exit 2
	fi

	if [[ $arg =~ ^[+-]?[0-9]+$ ]]; then
		_set_number "$series_dir" "$arg"
	else
		_set_pattern "$series_dir" "$arg"
	fi
}

_set_number() {
	series_dir=$1
	number=$2

	data=$(grep "^$series_dir:" "$data_file")
	next=$(cut -d: -f2 <<< "$data")

	list=$(find "$series_dir" "${formats[@]}" | sort)

	if [[ $number =~ ^\+ ]]; then
		number=${number:1}
		matching=$(grep -A "$number" "$next" <<< "$list" | tail -1)
	elif [[ $number =~ ^- ]]; then
		number=${number:1}
		matching=$(grep -B "$number" "$next" <<< "$list" | head -1)
	else
		matching=$(head -n "$number" <<< "$list" | tail -1)
	fi

	_del "$series_dir"
	_add "$series_dir" "$matching"
	echo "Up next"
	echo "$matching"
}

_set_pattern() {
	series_dir=$1
	pattern=$2

	data=$(grep "^$series_dir:" "$data_file")

	matching=$(find "$series_dir" "${formats[@]}" | grep -i "$pattern")

	if [[ -z $matching ]]; then
		echo "No matching files"
	else
		records=$(wc -l <<< "$matching")

		if [[ $records -eq 1 ]] ; then
			_del "$series_dir"
			_add "$series_dir" "$matching"
			echo "Up next:"
			echo "$matching"
		else
			echo "Too many matching files:"
			echo "$matching"
		fi
	fi
}

_list() {
	series_dir=$1
	records=$2

	data=$(grep "^$series_dir:" "$data_file")

	if [[ -z $data ]]; then
		echo "Series with given id doesn't exist"
		exit 2
	fi

	next=$(cut -d: -f2 <<< "$data")

	list=$(find "$series_dir" "${formats[@]}" | sort)

	echo "Up next"
	if [[ -z $next ]]; then
		head "-$records" <<< "$list"
	else
		grep --color=always "-C$records" "$next" <<< "$list"
	fi
}

_list_all() {
	echo -e "Series directory\nUp next\n"
	while read line; do
		cut -d: -f1 <<< "$line"
		cut -d: -f2 <<< "$line"
		echo
	done < "$data_file"
}

series_dir=$1
if [[ -z $series_dir ]]; then
	_list_all
	exit 0
fi
series_dir=$(readlink -f "$series_dir")
if ! [[ -d $series_dir ]]; then
	echo "Wrong directory"
	exit 2
fi
option=$2

case $option in
	'')
		_watch "$series_dir"
		;;
	add)
		_add "$series_dir" ""
		;;
	del)
		_del "$series_dir"
		;;
	set)
		pattern=$3
		_set "$series_dir" "$pattern"
		;;
	ls|list)
		records=${3:-1}
		_list "$series_dir" "$records"
		;;
	*)
		help
		;;
esac
