#!/bin/bash

formats=
player=
source "$HOME/.seriesrc"
# id:series_dir:next_to_watch
data_file="$HOME/.series"

touch "$data_file"


help() {
	cat << EOH
	$0 series_id [add|set|del|ls]
EOH
	exit 1
}

_add() {
	id=$1

	if grep -qs "^$id:" "$data_file"; then
		echo "Series with given id already exist"
		exit 2
	fi

	series_dir=$2
	series_dir=$(readlink -f "$series_dir")

	if [[ -z $series_dir ]]; then
		echo "Enter correct path"
		exit 3
	fi

	next=$3

	echo "$id:$series_dir:$next" >> "$data_file"
}

_del() {
	id=$1

	data=$(grep "^$id:" "$data_file")
	if [[ -z $data ]]; then
		echo "Series with given id doesn't exist"
		exit 2
	fi

	if grep -qs "^$id:" "$data_file"; then
		new_data=$(grep -v "^$id:" "$data_file")
		echo "$new_data" > "$data_file"
	else
		echo "Series with given id doesn't exist"
		exit 2
	fi
}

_watch() {
	id=$1
	data=$(grep "^$id:" "$data_file")

	if [[ -z $data ]]; then
		echo "Series with given id doesn't exist"
		exit 2
	fi

	series_dir=$(cut -d: -f2 <<< "$data")
	next=$(cut -d: -f3 <<< "$data")

	list=$(find "$series_dir" "${formats[@]}" | sort)

	if [[ -z $next ]]; then
		next=$(head -1 <<< "$list")
	fi

	# update record when player exits without an error
	if "${player[@]}" "$next"; then
		another=$(grep -A1 "$next" <<< "$list" | tail -1)
		_del "$id"
		_add "$id" "$series_dir" "$another"
	else
		echo "Not updating series record"
	fi
}

_set() {
	id=$1
	arg=$2

	data=$(grep "^$id:" "$data_file")
	if [[ -z $data ]]; then
		echo "Series with given id doesn't exist"
		exit 2
	fi

	if [[ $arg =~ ^[+-]?[0-9]+$ ]]; then
		_set_number "$id" "$arg"
	else
		_set_pattern "$id" "$arg"
	fi
}

_set_number() {
	id=$1
	number=$2

	data=$(grep "^$id:" "$data_file")
	series_dir=$(cut -d: -f2 <<< "$data")
	next=$(cut -d: -f3 <<< "$data")

	list=$(find "$series_dir" "${formats[@]}" | sort)

	if [[ $number =~ ^\+ ]]; then
		number=${number:1}
		matching=$(grep -A "$number" "$next" <<< "$list" | tail -1)
	elif [[ $number =~ ^- ]]; then
		number=${number:1}
		matching=$(grep -B "$number" "$next" <<< "$list" | head -1)
	else
		matching=$(head -n "$number" <<< "$list" | tail -1)
	fi

	_del "$id"
	_add "$id" "$series_dir" "$matching"
}

_set_pattern() {
	id=$1
	pattern=$2

	data=$(grep "^$id:" "$data_file")
	series_dir=$(cut -d: -f2 <<< "$data")

	matching=$(find "$series_dir" "${formats[@]}" | grep -i "$pattern")

	if [[ -z $matching ]]; then
		echo "No matching files"
	else
		records=$(wc -l <<< "$matching")

		if [[ $records -eq 1 ]] ; then
			_del "$id"
			_add "$id" "$series_dir" "$matching"
		else
			echo "Too many matching files:"
			echo "$matching"
		fi
	fi
}

_list() {
	id=$1
	data=$(grep "^$id:" "$data_file")
	if [[ -z $data ]]; then
		echo "Series with given id doesn't exist"
		exit 2
	fi

	series_dir=$(cut -d: -f2 <<< "$data")
	next=$(cut -d: -f3 <<< "$data")

	list=$(find "$series_dir" "${formats[@]}" | sort)

	echo "Up next"
	if [[ -z $next ]]; then
		head -1 <<< "$list"
	else
		grep --color=always -C1 "$next" <<< "$list"
	fi
}

_list_all() {
	echo "    Id  Up next"
	while read line; do
		id=$(cut -d: -f1 <<< "$line")
		next=$(cut -d: -f3 <<< "$line")
		printf "%6s  %s\n" "$id" "$next"
	done < "$data_file"
}


id=$1
option=$2

case $option in
	add)
		series_dir=$3
		_add "$id" "$series_dir"
		;;
	del|delete)
		_del "$id"
		;;
	set)
		pattern=$3
		_set "$id" "$pattern"
		;;
	ls|list)
		_list "$id"
		;;
	'')
		if [[ -n $id ]]; then
			_watch "$id"
		else
			# help
			_list_all
		fi
		;;
	*)
		help
		;;
esac
